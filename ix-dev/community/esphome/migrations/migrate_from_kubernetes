#!/usr/bin/python3

import os
import sys
import yaml

from migration_helpers.resources import migrate_resources
from migration_helpers.storage import migrate_storage_item


def migrate(values):
    config = values.get("helm_secret", {}).get("config", {})
    if not config:
        raise ValueError("No config found in values")

    new_values = {
        "esphome": {
            "instance_name": config["esphomeConfig"].get("instanceName", "esphome"),
            "additional_envs": config["esphomeConfig"].get("additionalEnvs", []),
        },
        "run_as": {
            "user": config["esphomeRunAs"].get("user", 568),
            "group": config["esphomeRunAs"].get("group", 568),
        },
        "network": {
            "host_network": config["esphomeNetwork"].get("hostNetwork", False),
            "web_port": config["esphomeNetwork"].get("webPort", 20910),
        },
        "storage": {
            "config": migrate_storage_item(config["esphomeStorage"]["config"]),
            "additional_storage": [
                migrate_storage_item(item, include_read_only=True)
                for item in config["esphomeStorage"]["additionalStorages"]
            ],
        },
        "resources": migrate_resources(config["resources"]),
    }

    return new_values


if __name__ == "__main__":
    if len(sys.argv) != 2:
        exit(1)

    if os.path.exists(sys.argv[1]):
        with open(sys.argv[1], "r") as f:
            print(yaml.dump(migrate(yaml.safe_load(f.read()))))
