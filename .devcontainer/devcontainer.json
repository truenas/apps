// For format details, see https://aka.ms/devcontainer.json. For config options, see the
{
  "name": "Apps Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "samuelcolvin.jinjahtml",
        "ms-python.black-formatter"
      ]
    }
  },

  // TODO: Remove after this is mergec https://github.com/truenas/apps_validation/pull/14
  "postCreateCommand": "echo 'python3 /app/catalog_templating/scripts/render_compose.py \"$@\"' > /usr/bin/catalog_templating && chmod +x /usr/bin/catalog_templating && echo 'python3 /app/apps_validation/scripts/catalog_validate.py \"$@\"' > /usr/bin/catalog_validate && chmod +x /usr/bin/catalog_validate && echo 'python3 /app/apps_validation/scripts/catalog_update.py \"$@\"' > /usr/bin/catalog_update && chmod +x /usr/bin/catalog_update && echo 'python3 /app/apps_validation/scripts/dev_apps_validate.py \"$@\"' > /usr/bin/dev_apps_validate && chmod +x /usr/bin/dev_apps_validate"
}
