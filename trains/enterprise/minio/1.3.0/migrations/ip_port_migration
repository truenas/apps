#!/usr/bin/python3

import os
import sys
import yaml


def migrate(values):
    values["network"]["api_port"] = {
        "port_number": values["network"]["api_port"],
        "bind_mode": "published",
        "host_ips": [],
    }
    values["network"]["console_port"] = {
        "port_number": values["network"]["console_port"],
        "bind_mode": "published",
        "host_ips": [],
    }
    return values


if __name__ == "__main__":
    if len(sys.argv) != 2:
        exit(1)

    if os.path.exists(sys.argv[1]):
        with open(sys.argv[1], "r") as f:
            print(yaml.dump(migrate(yaml.safe_load(f.read()))))
